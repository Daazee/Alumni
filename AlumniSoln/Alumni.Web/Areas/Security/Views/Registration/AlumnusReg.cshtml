                @Html.DropDownListFor(Model => Model.State, (IEnumerable<SelectListItem>)ViewBag.State, "Select",
                           new { @class = "form-control", style = "width: 100px !important; float:left; margin-right:30px;" })
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Town, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
